<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#80c783"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="100dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:id="@+id/layout_1">

            <!--ID-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/id"
                    android:layout_marginLeft="20dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_id"
                    android:hint="ID를 입력하세요. [필수]"
                    android:layout_marginLeft="20dp"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:maxLines="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text=" "
                    android:layout_marginRight="20dp"
                    android:textColor="#888888"
                    android:id="@+id/text_id_check"
                    android:layout_gravity="right"
                    android:visibility="invisible"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#CCCCCC"
                android:layout_marginTop="10dp"/>

            <!--password-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/password"
                    android:layout_marginLeft="20dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_pwd"
                    android:hint="Password를 입력하세요. [필수]"
                    android:layout_marginLeft="20dp"
                    android:inputType="textPassword"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#CCCCCC"
                android:layout_marginTop="10dp"/>

            <!--password-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/password"
                    android:layout_marginLeft="20dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_repwd"
                    android:hint="Password를 다시 입력 해주세요."
                    android:layout_marginLeft="20dp"
                    android:inputType="textPassword"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Password 불일치"
                    android:layout_marginRight="20dp"
                    android:textColor="#f55354"
                    android:id="@+id/text_pwd_check"
                    android:layout_gravity="right"
                    android:visibility="gone"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#CCCCCC"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/layout_2">

            <!--Name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/name"
                    android:layout_marginLeft="20dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_name"
                    android:hint="이름을 입력해 주세요.[필수]"
                    android:layout_marginLeft="20dp"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#CCCCCC"
                android:layout_marginTop="10dp"/>

            <!--Tel-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/tel"
                    android:layout_marginLeft="20dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_tel"
                    android:hint="전화번호를 입력해 주세요.(-제외)[필수]"
                    android:layout_marginLeft="20dp"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="10자리 이상 입력"
                    android:layout_marginRight="20dp"
                    android:textColor="#f55354"
                    android:id="@+id/text_tel_check"
                    android:layout_gravity="right"
                    android:visibility="gone"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#CCCCCC"
                android:layout_marginTop="10dp"/>

            <!--NickName-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/nickname"
                    android:layout_marginLeft="20dp"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_nickname"
                    android:hint="NickName을 입력하세요."
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text=" "
                    android:layout_marginRight="20dp"
                    android:id="@+id/text_nickname"
                    android:layout_gravity="right"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#CCCCCC"
                android:layout_marginTop="10dp"/>

            <!--Gender-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/gender"
                    android:layout_marginLeft="20dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Gender  "
                    android:textSize="16dp"
                    android:textColor="#888888"/>


                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/radio_gender"
                    android:layout_gravity="center">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="남"
                        android:id="@+id/man"
                        android:layout_marginLeft="40dp"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="여"
                        android:id="@+id/woman"
                        android:layout_marginLeft="50dp"/>

                </RadioGroup>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#CCCCCC"
                android:layout_marginTop="10dp"/>

            <!--Birthday-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/birthday"
                    android:layout_marginLeft="15dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="생년월일을 선택하세요. [필수]"
                    android:textSize="16dp"
                    android:id="@+id/text_birth"
                    android:textColor="#888888"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="선택"
                    android:layout_marginRight="20dp"
                    android:textColor="#fff"
                    android:background="@drawable/btn_radius"
                    android:id="@+id/btn_birth"
                    android:layout_gravity="right"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#CCCCCC"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/layout_3">

            <!--MBTI-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/mbti"
                    android:layout_marginLeft="20dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="본인의 'MBTI'를 선택하세요. [필수]"
                    android:textSize="16dp"
                    android:id="@+id/text_mbti"
                    android:textColor="#888888"
                    android:layout_weight="1"/>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="선택"
                    android:layout_marginRight="20dp"
                    android:textColor="#fff"
                    android:background="@drawable/btn_radius"
                    android:id="@+id/btn_mbti"
                    android:layout_gravity="right"/>

            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#CCCCCC"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이전"
            android:textColor="#fff"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/btn_radius"
            android:id="@+id/btn_pre"
            android:layout_gravity="left"
            android:visibility="invisible"
            android:layout_weight="1"
            android:enabled="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음"
            android:textColor="#fff"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/btn_radius_no"
            android:id="@+id/btn_next"
            android:layout_gravity="right"
            android:visibility="visible"
            android:layout_weight="1"
            android:enabled="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료"
            android:textColor="#fff"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/btn_radius_no"
            android:enabled="false"
            android:id="@+id/join_btn"
            android:layout_gravity="right"
            android:visibility="gone"
            android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>