<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MbtiActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="당신의 'MBTI'는 무엇인가요?"
            android:textSize="25dp"
            android:textColor="#80c783"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="'MBTI' 유형을 선택하지 않으시면,\n 서비스 이용에 제한이 있을 수 있습니다."
           android:textColor="#888888"
            android:gravity="center"
            android:layout_marginVertical="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="10dp">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="ISTJ"
                android:textColor="#000000"
                android:textStyle="bold"
                android:background="@drawable/btn_round"
                android:layout_margin="5dp"
                android:id="@+id/btn_istj"/>

		//MBTI 버튼 모두 #888888로 변경
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="ISFJ"
                android:textColor="#888888"
                android:textStyle="bold"
                android:background="@drawable/btn_round"
                android:layout_margin="5dp"
                android:id="@+id/btn_isfj"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="INFJ"
                android:textColor="#888888"
                android:textStyle="bold"
                android:background="@drawable/btn_round"
                android:layout_margin="5dp"
                android:id="@+id/btn_infj"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="INTJ"
                android:textColor="#888888"
                android:textStyle="bold"
                android:background="@drawable/btn_round"
                android:layout_margin="5dp"
                android:id="@+id/btn_intj"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="5dp">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="ISTP"
                android:textColor="#888888"
                android:textStyle="bold"
                android:background="@drawable/btn_round"
                android:layout_margin="5dp"
                android:id="@+id/btn_istp"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="ISFP"
                android:textColor="#888888"
                android:textStyle="bold"
                android:background="@drawable/btn_round"
                android:layout_margin="5dp"
                android:id="@+id/btn_isfp"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="INFP"
                android:textColor="#888888"
                android:textStyle="bold"
                android:background="@drawable/btn_round"
                android:layout_margin="5dp"
                android:id="@+id/btn_infp"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="INTP"
                android:textColor="#888888"
                android:textStyle="bold"
                android:background="@drawable/btn_round"
                android:layout_margin="5dp"
                android:id="@+id/btn_intp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="5dp">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="ESTP"
                android:textColor="#888888"
                android:textStyle="bold"
                android:background="@drawable/btn_round"
                android:layout_margin="5dp"
                android:id="@+id/btn_estp"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="ESFP"
                android:textColor="#888888"
                android:textStyle="bold"
                android:background="@drawable/btn_round"
                android:layout_margin="5dp"
                android:id="@+id/btn_esfp"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="ENFP"
                android:textColor="#888888"
                android:textStyle="bold"
                android:background="@drawable/btn_round"
                android:layout_margin="5dp"
                android:id="@+id/btn_enfp"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="ENTP"
                android:textColor="#888888"
                android:textStyle="bold"
                android:background="@drawable/btn_round"
                android:layout_margin="5dp"
                android:id="@+id/btn_entp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="5dp">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="ESTJ"
                android:textColor="#888888"
                android:textStyle="bold"
                android:background="@drawable/btn_round"
                android:layout_margin="5dp"
                android:id="@+id/btn_estj"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="ESFJ"
                android:textColor="#888888"
                android:textStyle="bold"
                android:background="@drawable/btn_round"
                android:layout_margin="5dp"
                android:id="@+id/btn_esfj"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="ENFJ"
                android:textColor="#888888"
                android:textStyle="bold"
                android:background="@drawable/btn_round"
                android:layout_margin="5dp"
                android:id="@+id/btn_enfj"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="ENTJ"
                android:textColor="#888888"
                android:textStyle="bold"
                android:background="@drawable/btn_round"
                android:layout_margin="5dp"
                android:id="@+id/btn_entj"/>

        </LinearLayout>



        <!--MBTI 테스트 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#CCCCCC"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="앗! 아직 나의 'MBTI'유형을 모르세요?"
            android:textSize="15dp"
            android:textColor="#888888"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MBTI 검사하기"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_mbti_test"
            android:background="@drawable/btn_radius"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="10dp"/>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="닫기"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="@drawable/btn_radius"
            android:id="@+id/btn_mbti_exit"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>